import pandas as pd
import re

# Input file
input_file = 'code.txt'
output_file = 'output_fixed.xlsx'

parsed_data = []

with open(input_file, 'r', encoding='utf-8') as f:
    lines = f.readlines()

print("ðŸ“„ File Contents Read:\n", "\n".join(lines))
print("-------------------------------------------------")

transaction_type = ''
create_time = ''

i = 0
while i < len(lines):
    line = lines[i].strip()
    print(f"ðŸ” Checking line {i}: {line}")

    if line.startswith('a123-apb-transactions-v2') or line.startswith('360ch_nobook_txn_retry'):
        print(f"âœ… Transaction type detected: {line}")
        transaction_type = line

    elif line.startswith('CreateTime:'):
        print(f"ðŸ•’ Found CreateTime line: {line}")

        # Extract CreateTime (numeric value)
        create_time_match = re.search(r"CreateTime:\s*(\d+)", line)
        if create_time_match:
            create_time = create_time_match.group(1)
            print(f"âœ… Extracted CreateTime: {create_time}")

        # Extract JSON part (remove CreateTime part)
        json_part = line.split('CreateTime:')[1].strip()
        json_part = json_part[len(create_time):].strip()

        print(f"ðŸ“‘ Extracted Key-Value Section: {json_part[:100]}...")

        key_value_pairs = json_part.replace('{', '').replace('}', '').split(',')

        for pair in key_value_pairs:
            pair = pair.strip()
            if ':' in pair:
                key, value = [p.strip().strip('"') for p in pair.split(':', 1)]
                if value.lower() == 'null':
                    value = None  # Convert "null" to None for clarity

                parsed_data.append({
                    'Transaction Type': transaction_type,
                    'CreateTime': create_time,
                    'Key': key,
                    'Value': value
                })
    
    i += 1

# Debug: Print parsed data before writing to file
if parsed_data:
    for parsed in parsed_data:
        print(f"ðŸ“Š Parsed Data: {parsed}")
else:
    print("âŒ No valid transactions found. Check the input file for errors.")

# Write the parsed data to the output file
if parsed_data:
    df = pd.DataFrame(parsed_data)
    df.to_excel(output_file, index=False)
    print(f"âœ… Data successfully saved to {output_file}")
else:
    print("âŒ No data to save. Exiting.")
